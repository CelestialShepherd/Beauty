<Catel:Window x:Class="Beauty.WPF.Windows.ApplicationWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:local="clr-namespace:Beauty.WPF.Windows"
              xmlns:Infrastructure="clr-namespace:Beauty.WPF.Infrastructure"
              xmlns:Catel="http://schemas.catelproject.com"
              xmlns:Controls="clr-namespace:Beauty.WPF.Controls"
              mc:Ignorable="d"
              Title="{Binding Title}"
              MinHeight="405" 
              Height="720"
              MinWidth="380" 
              Width="1280" 
              WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <Controls:StateBar Grid.Row="0"
                           Background="{StaticResource OrangeColor}"
                           Foreground="{StaticResource WhiteColor}"
                           Visibility="Collapsed"
                           Content="Загрузка данных..."/>

        <Controls:ViewHost Grid.Row="1"
                           View="{Binding CurrentView}"/>

    </Grid>

</Catel:Window>
